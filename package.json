{
  "name": "stl",
  "version": "1.0.0",
  "description": "An Electron application with React and TypeScript",
  "main": "./out/main/index.js",
  "author": "github.com/Metanart",
  "license": "MIT",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint --cache .",
    "lint:fix": "eslint --cache --fix .",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "yarn typecheck:node && yarn typecheck:web",
    "start": "electron-vite preview",
    "dev": "electron-vite dev",
    "dev:main": "electron-vite dev --watch",
    "build": "yarn typecheck && electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "build:unpack": "yarn build && electron-builder --dir",
    "build:win": "yarn build && electron-builder --win",
    "build:mac": "electron-vite build && electron-builder --mac",
    "build:linux": "electron-vite build && electron-builder --linux",
    "sb": "storybook dev -p 6006",
    "sb:build": "storybook build",
    "i18n": "typesafe-i18n",
    "test": "yarn test:unit",
    "test:e2e": "cross-env NODE_ENV=test NODE_NO_WARNINGS=1 playwright test",
    "test:e2e:ui": "cross-env NODE_ENV=test NODE_NO_WARNINGS=1 playwright test --ui",
    "test:unit": "vitest run --project unit",
    "test:unit:ui": "vitest --project unit --ui",
    "test:sb": "vitest --environment storybook",
    "prepare": "husky",
    "check-branch-name": "node scripts/check-branch-name.js"
  },
  "dependencies": {
    "@automapper/core": "^8.8.1",
    "@automapper/pojos": "^8.8.1",
    "@electron-toolkit/preload": "^3.0.1",
    "@electron-toolkit/utils": "^4.0.0",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@hookform/resolvers": "^5.2.0",
    "@mui/icons-material": "^7.1.1",
    "@mui/material": "^7.1.1",
    "@mui/x-data-grid": "^8.5.2",
    "@reduxjs/toolkit": "^2.8.2",
    "consola": "^3.4.2",
    "dotenv": "^16.5.0",
    "electron-updater": "^6.3.9",
    "jsdom": "^26.1.0",
    "notistack": "^3.0.2",
    "react-error-boundary": "^6.0.0",
    "react-hook-form": "^7.61.1",
    "react-redux": "^9.2.0",
    "react-router-dom": "^7.6.2",
    "reflect-metadata": "^0.2.2",
    "reset.css": "^2.0.2",
    "sqlite3": "^5.1.7",
    "typeorm": "^0.3.24",
    "typesafe-i18n": "^5.26.2",
    "zod": "^4.0.10"
  },
  "devDependencies": {
    "@automapper/types": "^6.3.1",
    "@electron-toolkit/eslint-config-prettier": "^3.0.0",
    "@electron-toolkit/eslint-config-ts": "^3.0.0",
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@playwright/test": "^1.54.1",
    "@storybook/addon-a11y": "9.0.17",
    "@storybook/addon-docs": "9.0.17",
    "@storybook/addon-vitest": "9.0.17",
    "@storybook/react-vite": "9.0.17",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^22.15.29",
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/browser": "^3.2.4",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "cross-env": "^10.0.0",
    "electron": "^35.1.5",
    "electron-builder": "^25.1.8",
    "electron-vite": "^3.1.0",
    "eslint": "^9.24.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-storybook": "9.0.17",
    "eslint-plugin-unused-imports": "^4.1.4",
    "husky": "^9.1.7",
    "playwright": "^1.54.1",
    "prettier": "^3.5.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "storybook": "9.0.17",
    "typescript": "^5.8.3",
    "vite": "^6.2.6",
    "vitest": "^3.2.4"
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}
